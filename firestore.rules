rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Events collection - public read, authenticated write
    match /events/{eventId} {
      // Allow anyone to read events (for public pages)
      allow read: if true;
      
      // Only authenticated users can create/update/delete events
      allow create, update, delete: if request.auth != null;
    }
    
    // Bookings collection - public read/write for booking forms, authenticated full access
    match /bookings/{bookingId} {
      // Allow public read for verification pages (by registrationId query)
      // Allow authenticated users to read all bookings
      allow read: if true;
      
      // Allow public to create bookings (for booking forms)
      allow create: if true;
      
      // Only authenticated users can update/delete bookings
      allow update, delete: if request.auth != null;
    }
    
    // Courses collection - public read for non-archived, authenticated write
    match /courses/{courseId} {
      // Allow public read for non-archived courses
      allow read: if resource.data.isArchived == false || request.auth != null;
      
      // Only authenticated users can create/update/delete courses
      allow create, update, delete: if request.auth != null;
    }
    
    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
